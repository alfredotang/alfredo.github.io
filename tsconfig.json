{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "noEmit": true,
        "jsx": "react",
        "baseUrl": ".",
        "paths": {
            "@src/*": [
                "./src/*"
            ],
            "@components": [
                "./src/components"
            ],
            "@theme": [
                "./src/theme"
            ],
            "@util": [
                "./src/util"
            ],
            "@provider": [
                "./src/provider"
            ],
        },
        "typeRoots": [
            "./node_modules/@types"
        ],
    },
    "include": [
        "./src/**/*",
        "./typing/**/*",
        ".gatsby/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}